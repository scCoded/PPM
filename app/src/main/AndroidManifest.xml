<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autismdiaryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.Diary.DiaryEntry"></activity>
        <activity android:name=".ui.Games.Game1Reaction.Game1" />
        <activity android:name=".ui.Games.Game2EmotionRecognition.Game2"/>
        <activity android:name=".ui.Games.Game3MathsQuiz.Game3"/>
        <activity android:name=".ui.Games.Game4Scenarios.Game4"/>
        <activity android:name=".ui.questionnaire.runQuestionnaire"/>
        <activity android:name=".ui.questionnaire.SplashScreen"/>

    </application>

</manifest>